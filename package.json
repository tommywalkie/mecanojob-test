{
  "name": "mecanojob-test",
  "version": "1.0.0",
  "scripts": {
    "test": "concurrently -c magenta,cyan --names \"server,client\" \"pnpm --filter @mecanojob/server test\" \"pnpm --filter @mecanojob/client test\"",
    "dev": "concurrently -c magenta,cyan --names \"server,client\" \"pnpm --filter @mecanojob/server dev\" \"pnpm --filter @mecanojob/client dev\"",
    "build": "concurrently -c magenta,cyan --names \"server,client\" \"pnpm --filter @mecanojob/server build\" \"pnpm --filter @mecanojob/client build\""
  },
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "GPL-3.0",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
